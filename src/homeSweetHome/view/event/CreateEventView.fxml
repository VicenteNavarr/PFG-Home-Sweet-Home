<AnchorPane id="AnchorPane" prefHeight="675.0" prefWidth="600.0" stylesheets="@createEvent.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="homeSweetHome.controller.event.CreateEventViewController">
    <children>
        <VBox alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="679.0" prefWidth="600.0" spacing="30" styleClass="main-container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox prefHeight="12.0" prefWidth="600.0" />
                <HBox alignment="CENTER" prefHeight="72.0" prefWidth="600.0">
                    <children>
                        <Label text="Nuevo Evento" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <TextField fx:id="fieldEventName" prefWidth="200" promptText="Nombre del Evento" styleClass="text-field" />
                    </children>
                </HBox>
                <!-- Campo para fecha -->
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <DatePicker fx:id="fieldEventDate" prefWidth="200" promptText="Fecha" />
                    </children>
                </HBox>
                <!-- Campo para hora -->
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <ComboBox fx:id="hourPicker" prefWidth="90.0" promptText="HH" />
                        <Label text=":" />
                        <ComboBox fx:id="minutePicker" prefWidth="90.0" promptText="mm" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <TextField fx:id="fieldEventDescription" prefHeight="165.0" prefWidth="311.0" promptText="Descripción del evento" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="171.0" prefWidth="600.0" spacing="25">
                    <children>
                        <Button fx:id="btnCreateEvent" mnemonicParsing="false" onAction="#createNewEvent" prefHeight="40.0" prefWidth="120.0" styleClass="btn-primary" text="Crear" />
                        <Button fx:id="btnCancelEvent" mnemonicParsing="false" onAction="#cancel" prefHeight="40.0" prefWidth="120.0" styleClass="btn-secondary" text="Cancelar" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
