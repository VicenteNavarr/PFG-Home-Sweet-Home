<AnchorPane id="AnchorPane" prefHeight="740.0" prefWidth="1111.0" style="-fx-background-color: white;" stylesheets="@eventView.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="homeSweetHome.controller.event.EventViewController">
   <children>
      <BorderPane style="-fx-background-color: white;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <!-- Sección superior -->
         <top>
            <VBox alignment="CENTER_RIGHT" style="-fx-background-color: #79D7BE;" styleClass="header-section" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="eventsTitle" styleClass="header-label" text="EVENTOS" />
               </children>
            </VBox>
         </top>
         
         <!-- Sección central -->
         <center>
            <VBox alignment="CENTER" prefHeight="593.0" prefWidth="1071.0" spacing="20" BorderPane.alignment="CENTER">
               <children>
                  <!-- ScrollPane con contenido centrado -->
                  <ScrollPane fx:id="scrollPane" fitToHeight="false" fitToWidth="true" pannable="false" style="-fx-background-color: white;" styleClass="custom-scroll-pane">
                     <content>
                        <!-- HBox para centrar el VBox -->
                        <HBox alignment="CENTER" prefWidth="Infinity">
                           <children>
                              <!-- VBox con ancho máximo de 1024px -->
                              <VBox fx:id="eventContainer" alignment="CENTER" maxWidth="900" spacing="30.0">

                                 <VBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </VBox.margin>
                              </VBox>
                           </children>
                        </HBox>
                     </content>
                     <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </padding>
                     <VBox.margin>
                        <Insets bottom="50.0" top="30.0" />
                     </VBox.margin>
                  </ScrollPane>
                  
                  <!-- Botón principal -->
                  <HBox alignment="CENTER" spacing="15">
                     <children>
                        <Button fx:id="btnOpenCreateNewEvent" mnemonicParsing="false" onAction="#openCreateNewEvent" styleClass="btn-primary" text="Crear Evento" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="30.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
