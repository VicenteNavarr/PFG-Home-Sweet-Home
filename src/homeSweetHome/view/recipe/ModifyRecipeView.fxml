<AnchorPane id="AnchorPane" prefHeight="863.0" prefWidth="911.0" stylesheets="@createRecipe.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="homeSweetHome.controller.recipe.ModifyRecipeViewController">
   <children>
