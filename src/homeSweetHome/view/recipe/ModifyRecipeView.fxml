         <children>
            <HBox prefHeight="12.0" prefWidth="600.0" />
            <HBox alignment="CENTER" prefHeight="72.0" prefWidth="600.0">
               <children>
                  <Label fx:id="modifyRecipeTitle" text="Modificar Receta" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="80.0">
               <children>
                  <TextField fx:id="fieldRecipeName" prefHeight="32.0" prefWidth="313.0" promptText="Nombre" styleClass="text-field" />
                  <ComboBox fx:id="cmbRecipeCategory" prefHeight="42.0" prefWidth="221.0" promptText="Categoría" styleClass="combo-box" />
                  <Button fx:id="btnAddIngredient" mnemonicParsing="false" onAction="#addIngredient" prefHeight="40.0" prefWidth="186.0" styleClass="btn-terciary" text="Añadir ingrediente" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="319.0" prefWidth="871.0">
               <children>
                  <!-- Tabla para mostrar ingredientes -->
                  <TableView fx:id="tableIngredients" prefHeight="280.0" prefWidth="645.0">
                     <columns>
                        <TableColumn fx:id="colIngredientName" prefWidth="129.0" text="Ingrediente" />
                        <TableColumn fx:id="colIngredientQuantity" prefWidth="82.0" text="Cantidad" />
                        <TableColumn fx:id="colIngredientUnit" prefWidth="106.0" text="Unidad" />
                        <TableColumn fx:id="deleteColumn" prefWidth="327.0" text="Acciones" />

                     </columns>
                  </TableView>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="20">
               <children>
                  <TextArea fx:id="txtAreaInstructions" prefHeight="376.0" prefWidth="648.0" promptText="Instrucciones" />
